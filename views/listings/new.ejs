<% layout("/layouts/boilerplate.ejs") %>

<body>   
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <!-- <br> -->
            <h3>New Listing</h3>
            <!-- <br> -->
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label" >Title</label>
            <input type="text" name="listings[title]"  class="form-control" placeholder="add a catchy title" required>
            <div class="invalid-feedback">please enter this field</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter this field</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listings[image]" class="form-control">
            required
        </div>
       <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label" >Price</label>
                <input type="number" name="listings[price]" class="form-control" placeholder="500" required>
                <div class="invalid-feedback">please enter this field</div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label" >Country</label> 
                <input type="text" name="listings[country]" class="form-control" placeholder="india" required>
                <div class="invalid-feedback">please enter this field</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listings[location]" class="form-control" required>
            <div class="invalid-feedback">please enter this field</div>
        </div>
        
        <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
    </div>
</body>
